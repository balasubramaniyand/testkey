version: '3'

services:
  postgres:
    image: postgres:16.3
    environment:
      POSTGRES_DB: keycloak
      POSTGRES_USER: keycloak
      POSTGRES_PASSWORD: password
    ports:
      - "5431:5432"

  keycloak:
    image: quay.io/keycloak/keycloak:25.0.1
    environment:
      DB_VENDOR: POSTGRES
      DB_ADDR: postgres
      DB_DATABASE: keycloak
      DB_USER: keycloak
      DB_PASSWORD: password
      KEYCLOAK_USER: admin
      KEYCLOAK_PASSWORD: admin
    ports:
      - "8080:8080"
    depends_on:
      - postgres
    command: ["-b", "0.0.0.0", "-Dkeycloak.profile.feature.hostname=disabled"]
